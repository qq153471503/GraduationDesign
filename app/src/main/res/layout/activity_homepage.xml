<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <TextView
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:gravity="center"
        android:text="BMP: 60 \n点击测试"
        android:background="@drawable/icon"
        android:layout_marginTop="27dp"
        android:id="@+id/id_textView_clickedTest"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Space
        android:id="@+id/id_space_1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/id_textView_clickedTest"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_textView_time"
        android:gravity="center"
        android:layout_below="@id/id_space_1"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_textView_time"
        android:orientation="horizontal"
        >

        <TextView
            android:textSize="28sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text=" LED: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/id_button_ledSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_off"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0"
            />

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_below="@+id/id_textView_time"
        android:id="@+id/id_gifImageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
