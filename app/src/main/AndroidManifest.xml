<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.graduationdesign"
    >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".activity.ConnectDevicesActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <activity android:name=".activity.HomePageActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.graduationdesign.HOMEPAGE" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.example.graduationdesign.CATEGORY"/>
            </intent-filter>
        </activity>

    </application>

</manifest>

